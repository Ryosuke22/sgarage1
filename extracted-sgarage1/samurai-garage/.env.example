# =================================================================
# Samurai Garage - Environment Configuration
# =================================================================

# Core Application Settings
NODE_ENV=development
PORT=5000
SESSION_SECRET=change-me-to-secure-random-string-in-production

# Database (Auto-configured on Replit)
DATABASE_URL=postgresql://user:password@localhost:5432/database

# CORS Configuration  
CORS_ORIGIN=https://your-frontend.example

# =================================================================
# Auction Business Logic
# =================================================================

# Soft Close Settings
SOFT_CLOSE_WINDOW_SEC=600         # 終了10分以内の入札で延長
SOFT_CLOSE_EXTEND_BY_SEC=600      # 延長10分
SOFT_CLOSE_MAX_EXTENSIONS=12      # 延長上限回数
AUTOBID_FIRE_OFFSET_SEC=300       # 自動入札の発火タイミング（終了5分前）

# =================================================================
# Optional Enhanced Features
# =================================================================

# Google Cloud Storage (Enhanced file management)
GCS_BUCKET=your-bucket-name
GCS_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project"}

# Email Notifications (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Legacy Email Support (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =================================================================
# Security & Performance
# =================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Features
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Performance Monitoring
PERFORMANCE_MONITORING=true
LOG_LEVEL=info

# =================================================================
# Replit Auto-configured (Do not set manually)
# =================================================================
# REPL_ID - Automatically set by Replit
# REPL_SLUG - Automatically set by Replit  
# REPLIT_DOMAINS - Automatically set by Replit